@model Ecommerce.Model.UserLoginRequest
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row justify-content-md-center">
    <div class="col-4">
        <!-- Material form login -->
        <div class="card">

            <h5 class="card-header info-color white-text text-center py-3">
                <strong>  <i class="fas fa-user-circle"></i> Sign in</strong>
            </h5>

            <!--Card content-->
            <div class="card-body px-lg-3 pt-0">
                <!-- Form -->
                <form asp-controller="Account" asp-action="Login" method="post" class="text-center" style="color: #757575;"
                      asp-route-returnUrl="@ViewBag.ReturnUrl">
                    @if (!string.IsNullOrEmpty(ViewBag.Message))
                    {
                        <div class="row">
                            <div class="col-12">
                                <div class="alert alert-danger" role="alert">
                                    @ViewBag.Message
                                </div>
                            </div>
                        </div>
                    }
                    <!-- Email -->
                    <div class="md-form">
                        <input asp-for="Email" class="form-control" />
                        <label asp-for="Email">E-mail</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <!-- Password -->
                    <div class="md-form">
                        <input asp-for="Password" type="password" class="form-control">
                        <label for="Password">Password</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-around">
                        @*<div>
                                <div class="form-check">
                                    <input type="checkbox" asp-for="RememberMe" class="form-check-input">
                                    <label class="form-check-label" for="RememberMe">Remember me</label>
                                </div>
                            </div>*@
                        <div>
                            <a href="">Forgot password?</a>
                        </div>
                    </div>

                    <!-- Sign in button -->
                    <button class="btn btn-outline-info btn-rounded btn-block my-4 waves-effect z-depth-0" type="submit">Sign in</button>

                    <!-- Register -->
                    <p>
                        Not a member?
                        <a href="">Register</a>
                    </p>
                </form>
                <!-- Form -->
            </div>
        </div>
        <!-- Material form login -->
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            $(".navbar-nav").find(".active").removeClass("active");
            $(".navbar-nav").find(".nav-login").addClass("active");
        });
    </script>
}
